FROM node:18-alpine AS builder

WORKDIR /app

COPY package*.json ./

# Install all dependencies for build
RUN npm install

COPY src ./src
COPY tsconfig.json ./

# Build TypeScript
RUN npm run build

# Production stage
FROM node:18-alpine

WORKDIR /app

COPY package*.json ./

# Install only production dependencies
RUN npm ci --only=production

# Copy built dist from builder
COPY --from=builder /app/dist ./dist

EXPOSE 3001

CMD ["npm", "start"]
